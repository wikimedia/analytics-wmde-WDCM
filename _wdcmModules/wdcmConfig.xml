<?xml version="1.0"?>
<parameters>
    <!-- general: directory structure and filenames -->
    <general>
        <!-- http_proxy: http_proxy in production -->
        <http_proxy>http://webproxy.eqiad.wmnet:8080</http_proxy>
        <!-- https_proxy: https_proxy in production -->
        <https_proxy>http://webproxy.eqiad.wmnet:8080</https_proxy>
        <!-- ontologyDir: the path to the ontology file -->
        <ontologyDir>/home/goransm/Analytics/WDCM/WDCM_Output/WDCM_Ontology/</ontologyDir>
        <!-- ontology: the ontology structure file to guide the Collect Items step -->
        <ontology>WDCM_Ontology_Berlin_05032017.csv</ontology>
        <!-- wdqs_endpoint: the Wikidata Query Service endpoint - must support gas programs -->
        <wdqs_endpoint>https://query.wikidata.org/bigdata/namespace/wdq/sparql?format=json&amp;query=</wdqs_endpoint>
        <!-- fPath_R: the path to the R WDCM modules -->
        <fPath_R>/home/goransm/Analytics/WDCM/WDCM_Scripts/</fPath_R>
        <!-- fPath_Python: the path to the Python WDCM modules -->
        <fPath_Python>/home/goransm/Analytics/WDCM/WDCM_Scripts/</fPath_Python>
        <!-- itemsDir: where are the Wikidata items from the ontology stored -->
        <itemsDir>/home/goransm/Analytics/WDCM/WDCM_Output/WDCM_CollectedItems/</itemsDir>
        <!-- structureDir: where do the structure files live (inessential for the main WDCM run) -->
        <structureDir>/home/goransm/Analytics/WDCM/WDCM_Output/WDCM_Structure/</structureDir>
        <!-- tempDir: temporary ETL dir -->
        <tempDir>/home/goransm/Analytics/WDCM/WDCM_Output/WDCM_tempDir/</tempDir>
        <!-- etlDir: where does Spark store the ETL outputs -->
        <etlDir>/home/goransm/Analytics/WDCM/WDCM_Output/WDCM_ETL/</etlDir>
        <!-- mlDir: where do the ML results go -->
        <mlDir>/home/goransm/Analytics/WDCM/WDCM_Output/WDCM_ML_Results/</mlDir>
        <!-- logDir: where do the logs live -->
        <logDir>/home/goransm/Analytics/WDCM/WDCM_Output/WDCM_Logs/</logDir>
        <!-- publicDir: where do we copy the results and map to https -->
        <publicDir>/srv/published-datasets/wmde-analytics-engineering/wdcm/</publicDir>
    </general>
    <!-- etl: ETL parameters for pyspark -->
    <etl>
      <!-- topNpopularWDIitems: how many most popular WD items to extract -->
      <topNpopularWDIitems>100000</topNpopularWDIitems>
      <!-- topNpopularCategoryWDItems: how many most popular WD items per category to extract -->
      <topNpopularCategoryWDItems>10000</topNpopularCategoryWDItems>
      <!-- NItemsTFMatrix: how many most popular WD items per category enters the TF matrix -->
      <NItemsTFMatrix>1000</NItemsTFMatrix>
    </etl>
    <!-- ml: Machine Learning parameters -->
    <ml>
        <!-- lda_NItems: how many items from the TF matrix do we model -->
        <lda_NItems>1000</lda_NItems>
        <!-- tSNE_Theta: t-SNE Theta paramater -->
        <tSNE_Theta>0.5</tSNE_Theta>
        <!-- tSNE_Perplexity: t-SNE Perplexity paramater -->
        <tSNE_Perplexity>10</tSNE_Perplexity>
    </ml>
    <!-- spark: spark2-submit parameters -->
    <spark>
      <!-- master: master -->
      <master>--master yarn</master>
      <!-- deploy_mode: deploy_mode -->
      <deploy_mode>--deploy-mode client</deploy_mode>
      <!-- num_executors: num_executors -->
      <num_executors>--num-executors 100</num_executors>
      <!-- driver_memory: driver_memory -->
      <driver_memory>--driver-memory 20000m</driver_memory>
      <!-- executor_memory: executor_memory -->
      <executor_memory>--executor-memory 8000m</executor_memory>
      <!-- executor_cores: executor_cores -->
      <executor_cores>--executor-cores 8</executor_cores>
    </spark>
</parameters>
